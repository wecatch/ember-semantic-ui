<div class="ui grid" >
    <div class="row">
        <div class="column">
            <div class="ui segments">
				<div class="ui secondary segment">
					<code class="code xml">
						\{{#ui-input focus=true}}\{{/ui-input}}
					</code>
				</div>
				<div class="ui segment">
					<UiInput @focus={{true}}></UiInput>
				</div>

				<div class="ui secondary segment">
					<code class="code xml">
						\{{#ui-input theme="icon" loading=true}}<i class="search icon"></i>\{{/ui-input}}
					</code>
				</div>
				<div class="ui segment">
					<UiInput @theme="icon" @loading={{true}}><i class="search icon"></i></UiInput>
				</div>

				<div class="ui secondary segment">
					<code class="code xml">
						\{{#ui-input error=true}}\{{/ui-input}}
					</code>
				</div>
				<div class="ui segment">
					<UiInput @error={{true}}></UiInput>
				</div>

				<div class="ui secondary segment">
					<code class="code xml">
						\{{#ui-input disabled=true}}\{{/ui-input}}
					</code>
				</div>
				<div class="ui segment">
					<UiInput @disabled={{true}} @value="search"></UiInput>
				</div>

				<div class="ui secondary segment">
					<code class="code xml">
						\{{#ui-input readonly=true}}\{{/ui-input}}
					</code>
				</div>
				<div class="ui segment">
					<UiInput @readonly={{true}} @value="search"></UiInput>
				</div>
				
				<div class="ui secondary segment">
					<code class="code xml">
		                \{{#ui-input onFocus=(action 'onfocus')}}\{{/ui-input}}
					</code>
				</div>
				<div class="ui segment">
					<label for="">email</label>
					<UiInput @onFocus={{action 'onfocus'}}></UiInput>
					{{result}} focus
				</div>
          	</div>

          	<div class="ui segments">
          		<div class="ui segment">
					<UiInput @theme="fluid icon" @value="search">
							<i class="search icon"></i>
					</UiInput>
				</div>

				<div class="html ui segment">
					<UiInput @theme="fluid action" @value="fluid">
						<UiButton>search</UiButton>
					</UiInput>
				</div>

				<div class="html ui segment">
					<UiInput @theme="mini icon" @value="search">
						<i class="search icon"></i>
					</UiInput>
				</div>

				<div class="html ui segment">
					<UiInput @theme="small icon" @value="search">
						<i class="search icon"></i>
					</UiInput>
				</div>

				<div class="html ui segment">
					<UiInput @theme="big icon" @value="search">
						<i class="search icon"></i>
					</UiInput>
				</div>

				<div class="html ui segment">
					<UiInput @theme="huge icon" @value="search">
						<i class="search icon"></i>
					</UiInput>
				</div>
          	</div>
        </div>
    </div>
</div>