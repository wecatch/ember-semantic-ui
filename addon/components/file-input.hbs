{{#if multiple }}
    <input type="file" name="file" multiple>
{{else}}
    <input type="file" name="file" >
{{/if}}

{{#if (has-block-params)}}
    {{yield uploader (action "start") (action "abort") fileObject}}
{{else}}
    {{#unless autoUpload}}
        <UiButton @loading={{isUploading}} @theme={{theme}} @action="start">upload</UiButton>
    {{/unless}}
{{/if}}